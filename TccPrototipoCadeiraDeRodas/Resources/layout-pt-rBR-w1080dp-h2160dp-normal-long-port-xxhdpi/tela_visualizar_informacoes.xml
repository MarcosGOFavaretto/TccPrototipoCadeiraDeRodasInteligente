<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3097E6"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:minHeight="25px"
        android:minWidth="25px"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout2"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <!-- Primeiro Quadrante -->
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="125sp"
                android:layout_width="125sp"
                android:id="@+id/linearLayout3"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloPorcentagemBateria"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="27sp"
                    android:text="BATERIA:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtPorcentagemBateria"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:text="25%">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="125sp"
                android:layout_width="125sp"
                android:id="@+id/linearLayout4"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloAutonomia"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="19sp"
                    android:text="AUTONOMIA:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtAutonomia"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:text="560 M">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <!-- Segundo Quadrante -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout5"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="125sp"
                android:layout_width="125sp"
                android:id="@+id/linearLayout6"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloCondicaoAuxiliador"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="19sp"
                    android:text="AUXILIADOR:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtCondicaoAuxiliador"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="26sp"
                    android:text="Recolhido">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="125sp"
                android:layout_width="125sp"
                android:id="@+id/linearLayout7"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloAutonomia"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:text="VALOR:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtPorcentagemBateria"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:text="XXX">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <!-- Terceiro Quadrante -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout8"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="125sp"
                android:layout_width="125sp"
                android:id="@+id/linearLayout9"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloPorcentagemBateria"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:text="VALOR:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtPorcentagemBateria"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:text="XXX">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="125sp"
                android:layout_width="125sp"
                android:id="@+id/linearLayout10"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloAutonomia"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:text="VALOR:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtPorcentagemBateria"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:text="XX">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout11"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:background="@drawable/navbar">
            <ImageButton
                android:layout_width="121dp"
                android:layout_height="50dp"
                android:id="@+id/imgBtnVisualizarInformações"
                android:background="#a23"
                android:layout_marginTop="8dp"/>
            <ImageButton
                android:layout_width="114dp"
                android:layout_height="50dp"
                android:id="@+id/imgBtnControles"
                android:background="#a23"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="14dp"/>
            <ImageButton
                android:layout_width="121dp"
                android:layout_height="50dp"
                android:id="@+id/imgBtnSair"
                android:background="#a23"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="14dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>