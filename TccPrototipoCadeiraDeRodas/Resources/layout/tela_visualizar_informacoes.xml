<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3097E6"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:minHeight="25px"
        android:minWidth="25px"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout2"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <!-- Primeiro Quadrante -->
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="150sp"
                android:layout_width="150sp"
                android:id="@+id/linearLayout3"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloPorcentagemBateria"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:text="BATERIA:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtPorcentagemBateria"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:text="">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="150sp"
                android:layout_width="150sp"
                android:id="@+id/linearLayout4"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloAutonomia"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:text="AUXILIADOR:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtAtuador"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:text="">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <!-- Segundo Quadrante -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout5"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="150sp"
                android:layout_width="150sp"
                android:id="@+id/linearLayout6"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloCondicaoAuxiliador"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:text="CINTO:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtCintoSeguranca"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:text="">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/campoinformacoes"
                android:layout_height="150sp"
                android:layout_width="150sp"
                android:id="@+id/linearLayout7"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/txtTituloAutonomia"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:text="Ã‚NGULO:">
                </TextView>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/txtAnguloAtaque"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:text="">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout11"
            android:layout_marginTop="215dp"
            android:orientation="horizontal"
            android:background="#000000">
            <ImageButton
                android:layout_width="113dp"
                android:layout_height="50dp"
                android:id="@+id/imgBtnVisualizarInformacoes"
                android:src="@drawable/navbarolho"
                android:background="#ffffff"
                android:layout_marginTop="8dp"/>
            <ImageButton
                android:layout_width="107dp"
                android:layout_height="50dp"
                android:id="@+id/imgBtnControles"
                android:src="@drawable/navbarseta"
                android:background="#ffffff"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="14dp"/>
            <ImageButton
                android:layout_width="113dp"
                android:layout_height="50dp"
                android:id="@+id/imgBtnSair"
                android:src="@drawable/navbarsair"
                android:background="#ffffff"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="13dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>