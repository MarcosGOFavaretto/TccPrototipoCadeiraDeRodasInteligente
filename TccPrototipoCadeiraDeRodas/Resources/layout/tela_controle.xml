<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- LinearLayout principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearlayout1"
        android:background="#5b9ac9">
        <!-- LinearLayout para os botÃµes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearlayout2"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">
            <!-- LinearLayout para os auxiliadores -->
            <LinearLayout
                android:layout_width="168.5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearlayout3"
                android:gravity="center"
                android:layout_marginRight="35dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTituloAuxiliadores"
                    android:text="AUXILIADORES"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <ImageButton
                    android:layout_width="147dp"
                    android:layout_height="79dp"
                    android:id="@+id/imgBtnSubirAuxiliador"
                    android:src="@drawable/btnsubirauxiliador"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"/>
                <ImageButton
                    android:layout_width="147dp"
                    android:layout_height="79dp"
                    android:id="@+id/imgBtnDescerAuxiliador"
                    android:src="@drawable/btndescerauxiliador"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
            <!-- LinearLayout para a velocidade -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearlayout4"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTituloAuxiliadores"
                    android:text="VELOCIDADES"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:id="@+id/imgBtnVelocidade1"
                    android:src="@drawable/btnvelocidade1"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"/>
                <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:id="@+id/imgBtnVelocidade2"
                    android:src="@drawable/btnvelocidade2"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="27dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearlayout5"
            android:gravity="center_horizontal">
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgBtnCima"
                android:src="@drawable/btncima"
                android:layout_marginLeft="86dp"
                android:onClick="ImgBtnCima__Click"
                />
            <ImageButton
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/imgBtnVelocidade3"
                android:src="@drawable/btnvelocidade3"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="33dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearlayout6"
            android:gravity="center">
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgBtnEsquerda"
                android:src="@drawable/btnesquerda"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnPararCadeira"
                android:text="PARAR"
                android:background="#ffffffff"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgBtnDireita"
                android:src="@drawable/btndireita"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearlayout7"
            android:gravity="center">
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgBtnBaixo"
                android:src="@drawable/btnbaixo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout11"
            android:layout_marginTop="81dp"
            android:orientation="horizontal"
            android:background="#000000">
            <ImageButton
                android:layout_width="113dp"
                android:layout_height="50dp"
                android:id="@+id/imgBtnVisualizarInformacoes"
                android:src="@drawable/navbarolho"
                android:background="#ffffff"
                android:layout_marginTop="8dp"/>
            <ImageButton
                android:layout_width="107dp"
                android:layout_height="50dp"
                android:id="@+id/imgBtnControles"
                android:src="@drawable/navbarseta"
                android:background="#ffffff"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="14dp"/>
            <ImageButton
                android:layout_width="113dp"
                android:layout_height="50dp"
                android:id="@+id/imgBtnSair"
                android:src="@drawable/navbarsair"
                android:background="#ffffff"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="13dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
